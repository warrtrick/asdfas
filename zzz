        <div class="buttons">
            <button id="yesBtn" onclick="respond('yes')">Yes!</button>
            <button id="noBtn" onmouseover="moveButton()" ontouchstart="moveButton()">No</button>
        </div>
        
        <div id="response"></div>
    </div>

    <script>
        let yesScale = 1;

        function moveButton() {
            const btn = document.getElementById('noBtn');
            const yesBtn = document.getElementById('yesBtn');

            // Calculation to keep the button within the visible window 
            // and away from the extreme edges of mobile screens
            const padding = 70; 
            const maxX = window.innerWidth - btn.offsetWidth - padding;
            const maxY = window.innerHeight - btn.offsetHeight - padding;

            const x = Math.random() * maxX + (padding / 2);
            const y = Math.random() * maxY + (padding / 2);
            
            btn.style.position = 'fixed';
            btn.style.left = x + 'px';
            btn.style.top = y + 'px';

            // Gradual growth of Yes button
            if (yesScale < 2.2) {
                yesScale += 0.12;
                yesBtn.style.transform = `scale(${yesScale})`;
            }
        }

        function respond(answer) {
            const responseDiv = document.getElementById('response');
            const nailong = document.getElementById('nailongBox');
            const sound = document.getElementById('yesSound');
            const yesBtn = document.getElementById('yesBtn');
            const noBtn = document.getElementById('noBtn');

            if (answer === 'yes') {
                sound.play().catch(() => {
                    console.log("Audio play requires user interaction first.");
                });
                
                nailong.style.animation = "shake 0.5s infinite";
                yesBtn.style.transform = "scale(1)";
                noBtn.style.display = 'none';

                confetti({
                    particleCount: 150,
                    spread: 70,
                    origin: { y: 0.7 },
                    colors: ['#ff9a9e', '#ffeb3b', '#e91e63']
                });

                responseDiv.innerHTML = "Yay! üòöüíï";
                responseDiv.style.color = "#4caf50";
            }
        }
    </script>
